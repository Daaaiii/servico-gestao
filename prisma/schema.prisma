generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator seed {
  provider = "ts-node"
}

model Cliente {
  codigo Int    @id @default(autoincrement())
  nome   String
  email  String @unique

  assinaturas Assinatura[]
}

model Assinatura {
  codigo              Int      @id @default(autoincrement())
  codPlano            Int
  codCli              Int
  inicioFidelidade    DateTime
  fimFidelidade       DateTime
  dataUltimoPagamento DateTime
  custoFinal          Decimal  @db.Decimal(10, 2)
  descricao           String

  plano   Plano   @relation(fields: [codPlano], references: [codigo])
  cliente Cliente @relation(fields: [codCli], references: [codigo])
}

model Plano {
  codigo      Int      @id @default(autoincrement())
  nome        String
  descricao   String
  custoMensal Decimal  @db.Decimal(10, 2)
  data        DateTime @default(now())

  assinaturas Assinatura[]
}
